<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:descendantFocusability="blocksDescendants"
    android:padding="8dip" >

    <ImageView
        android:id="@+id/lost_user_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerInside"
        android:src="@drawable/user_icon_default_main" />

    <TextView
        android:id="@+id/lost_user_name"
        style="@style/TextTheme"
        android:layout_alignBottom="@id/lost_user_logo"
        android:layout_alignTop="@id/lost_user_logo"
        android:layout_marginLeft="8dip"
        android:layout_toRightOf="@id/lost_user_logo"
        android:gravity="center_vertical"
        android:text="岁月抚伤" />

    <TextView
        android:id="@+id/lost_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/lost_user_logo"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/lost_user_logo"
        android:scaleType="centerInside"
        android:src="@drawable/ic_action_fav_normal" />

    <TextView
        android:id="@+id/lost_content_text"
        style="@style/TextTheme"
        android:layout_below="@id/lost_user_logo"
        android:layout_margin="4dp"
        android:text="十年之前，我不认识你 你不属于我，我们还是一样，陪在一个陌生人左右，走过渐渐熟悉的街头;十年之后，我们是朋友， 还可以问候，只是那种温柔，再也找不到拥抱的理由，情人最后难免沦为朋友。" />

    <com.xgr.wonderful.view.MyGridView
        android:id="@+id/lost_content_image"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/lost_content_text"
        android:layout_centerHorizontal="true"
        android:horizontalSpacing="4dp"
        android:numColumns="4"
        android:padding="5dp"
        android:src="@drawable/bg_pic_loading"
        android:verticalSpacing="4dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/lost_item_action_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/lost_content_image"
        android:layout_marginBottom="4dip"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:layout_marginTop="4dip"
        android:drawableLeft="@drawable/ic_action_comment"
        android:gravity="center"
        android:text="评论"
        android:textColor="#888888" />

    <TextView
        android:id="@+id/tv_phone"
        style="@style/Smile.TextView._White"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/lost_item_action_comment"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/lost_content_image"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:layout_marginTop="4dip"
        android:background="@color/green"
        android:drawableLeft="@drawable/icon_photo"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="138024249542"
        android:textSize="12sp" >
    </TextView>

    <TextView
        android:id="@+id/lost_item_action_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lost_content_image"
        android:layout_marginBottom="4dip"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:layout_marginTop="4dip"
        android:layout_toLeftOf="@id/lost_item_action_comment"
        android:drawableLeft="@drawable/ic_action_share"
        android:gravity="center"
        android:text="分享"
        android:textColor="#888888" />

</RelativeLayout>